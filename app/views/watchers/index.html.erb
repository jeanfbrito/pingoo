<p id="notice"><%= notice %></p>

<h1>Watchers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Current status</th>
      <th>Previous status</th>
      <th>Last watched</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @watchers.each do |watcher| %>
      <tr>
        <td><%= watcher.name %></td>
        <td><%= watcher.url %></td>
        <td><%= watcher.current_status %></td>
        <td><%= watcher.previous_status %></td>
        <td><%= time_ago_in_words(watcher.last_watched) if watcher.last_watched.present?  %></td>
        <td><%= link_to 'Watch Now', watch_now_watcher_path(watcher) %></td>
        <td><%= link_to 'Show', watcher %></td>
        <td><%= link_to 'Edit', edit_watcher_path(watcher) %></td>
        <td><%= link_to 'Destroy', watcher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

